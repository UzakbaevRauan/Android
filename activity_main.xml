<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/math_oreration"
        android:layout_width="match_parent"
        android:layout_height="80sp"
        android:textColor="@color/black"
        android:gravity="end"
        android:ellipsize="start"
        android:textSize="40sp"
        android:singleLine="true"
        />
    <TextView
        android:id="@+id/result_text"
        android:layout_width="match_parent"
        android:layout_height="100sp"
        android:textColor="@color/black"
        android:gravity="end"
        android:ellipsize="end"
        android:textSize="30sp"
        android:singleLine="true"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

      <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="80sp">
          <TextView
              style="@style/ActionButton"
              android:text="mc"
              />
          <TextView
              style="@style/ActionButton"
              android:text="m+"
              />
          <TextView
              style="@style/ActionButton"
              android:text="m-"
              />
          <TextView
              style="@style/ActionButton"
              android:text="mr"
              />

        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="80sp">
            <TextView
                style="@style/NumberButton"
                android:text="C"
                />
            <TextView
                style="@style/NumberButton"
                android:text="รท"
                />
            <TextView
                style="@style/NumberButton"
                android:text="ร"
                />

            <TextView
                style="@style/ActionButton"
                android:text="AC" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="80sp">
            <TextView
                style="@style/NumberButton"
                android:text="7" />

            <TextView
                style="@style/NumberButton"
                android:text="8" />

            <TextView
                style="@style/NumberButton"
                android:text="9" />
            <TextView
                style="@style/ActionButton"
                android:text="CE" />

        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="80sp">
            <TextView
                style="@style/NumberButton"
                android:text="4" />
            <TextView
                style="@style/NumberButton"
                android:text="5" />
            <TextView
                style="@style/NumberButton"
                android:text="6" />
            <TextView
                style="@style/ActionButton"
                android:text="-" />

        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="80sp">
            <TextView
                style="@style/NumberButton"
                android:text="1" />
            <TextView
                style="@style/NumberButton"
                android:text="2" />
            <TextView
                style="@style/NumberButton"
                android:text="3" />

            <TextView
                style="@style/ActionButton"
                android:layout_height="92dp"
                android:text="+" />


        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="80sp">
            <TextView
                style="@style/NumberButton"
                android:text="%" />
            <TextView
                style="@style/NumberButton"
                android:text="0" />
            <TextView
                style="@style/NumberButton"
                android:text="." />
            <TextView
                style="@style/equalButton"
                android:text="=" />

        </LinearLayout>
    </LinearLayout>



</LinearLayout>